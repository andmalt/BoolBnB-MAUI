<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BoolBnB_MAUI.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:BoolBnB_MAUI.Components">
    <AbsoluteLayout Padding="5">
        <components:HeaderContent
            AbsoluteLayout.LayoutBounds="1,0"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            BackArrow="False"
            IsAuthenticated="{Binding IsAuth}"
            ZIndex="10" />

        <Button
            AbsoluteLayout.LayoutBounds="0.5,0.7,170,50"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            Clicked="GoToHomesPages"
            Text="Vai alle case" />

    </AbsoluteLayout>
</ContentPage>
