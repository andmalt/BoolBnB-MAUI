<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BoolBnB_MAUI.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <VerticalStackLayout>
        <StackLayout Padding="20">
            <ContentView x:Name="errPass" IsVisible="false">
                <Label FontSize="Large" Text="La password Ã¨ sbagliata" />
            </ContentView>

            <Image
                Aspect="Center"
                HeightRequest="450"
                Source="dotnet_bot.svg" />

            <Entry
                x:Name="Username"
                Placeholder="Insert username"
                TextChanged="OnEmailChanged" />
            <Entry
                x:Name="Password"
                Margin="0,15,0,65"
                IsPassword="True"
                Placeholder="Insert password"
                TextChanged="OnPasswordChanged" />

            <Button Clicked="Login" Text="Accedi" />

        </StackLayout>
    </VerticalStackLayout>
</ContentPage>